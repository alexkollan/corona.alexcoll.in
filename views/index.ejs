        <% data.forEach(function(e, i){%>
          <td><%= e.date %></td>
          <%})%>
      </tr>
    </thead>
    <tr>
      <% data.forEach(function(e, i){%>
        <td><%= e.num %></td>
        <%})%>
      </tr>
  </table>
